<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.catira.opencvdemo.activities.DimensionActivity">

    <FrameLayout

        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/dim_graphic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/dimension_graphic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/arm_length"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:gravity="center"
                android:hint="in cm"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/inside_leg_length"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="230dp"
                android:ems="10"
                android:gravity="center"
                android:hint="in cm"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/body_length"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="115dp"
                android:ems="10"
                android:gravity="center"
                android:hint="in cm"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </FrameLayout>

    <ImageButton
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/background_rectangle"
        android:elevation="10dp" />

    <ImageButton
        android:id="@+id/fa_button_dim"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/fab_oval"
        android:elevation="10dp"
        android:src="@drawable/fab_check_icon" />

</RelativeLayout>


